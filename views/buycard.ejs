        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
        <link href="css/styles.css" rel="stylesheet" type="text/css"/>
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="sb-nav-fixed">
        <%- include('./header.ejs') %>
        <%- include('./menu.ejs') %>
            <div id="layoutSidenav_content">
                <main>
                    <section class="vh-100 gradient-custom">
                        <div class="container py-5 h-100">
                          <div class="row justify-content-center align-items-center h-100">
                            <div class="col-12 col-lg-9 col-xl-7">
                              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                                <div class="card-body p-4 p-md-5">
                                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Mua thẻ điện thoại</h3>
                                  <form>
                                    <div class="row">
                                      <div class="col-md-6 mb-4">                 
                                        <h6 class="mb-2 pb-1">Loại thẻ: </h6>                     
                                        <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="typecard" id="" value="" checked />
                                          <label class="form-check-label" for="">Viettel</label>
                                        </div>
                                       <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="typecard" id="" value="" />
                                          <label class="form-check-label" for="">Mobilefone</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="typecard" id="" value="" />
                                          <label class="form-check-label" for="">Vinaphone</label>
                                        </div>
                                      </div>

                                      <div class="col-md-6 mb-4">                 
                                        <h6 class="mb-2 pb-1">Mệnh giá: </h6>                     
                                        <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="costcard" id="" value="" checked />
                                          <label class="form-check-label" for="">10.000 VNĐ</label>
                                        </div>
                                       <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="costcard" id="" value="" />
                                          <label class="form-check-label" for="">20.000 VNĐ</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="costcard" id="" value="" />
                                          <label class="form-check-label" for="">50.000 VNĐ</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="costcard" id="" value="" />
                                          <label class="form-check-label" for="">100.000 VNĐ</label>
                                        </div>
                                      </div>
                                    </div>                             
                                      <div class="row">
                                        <div class="col-12">
                                          <label style="display: block;font-weight: 500; " class="form-label select-label mb-2 pb-1">Số lượng</label>
                                          <select class="select form-control-lg">
                                            <option value="1" disabled>Số lượng</option>
                                            <option value="2">1</option>
                                            <option value="3">2</option>
                                            <option value="4">3</option>
                                            <option value="5">4</option>
                                            <option value="6">5</option>
                                          </select>
                                        </div>
                                      </div>               
                                    <div class="mt-4 pt-2">
                                      <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                                    </div>                      
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </section>
                </main>
                <%- include('./footer.ejs') %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
