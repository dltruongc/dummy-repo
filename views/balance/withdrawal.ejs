    <body class="sb-nav-fixed">
        <div class="container">
          <form method="POST">
            <h1 class="text-center">Nạp tiền từ thẻ tín dụng</h1>
            <div class="mb-3">
              <label for="amount" class="form-label">Số tiền (1000 = 1,000VND)</label>
              <input type="number" class="form-control" name="amount" id="amount" aria-describedby="amount">
            </div>
            <div class="mb-3">
              <label for="cardnumber" class="form-label">Mã thẻ tín dụng</label>
              <input type="text" class="form-control" name="cardnumber" id="cardnumber" aria-describedby="cardnumber">
            </div>
            <div class="mb-3">
              <label for="exp" class="form-label">EXP</label>
              <input type="date" class="form-control" name="exp" id="exp" aria-describedby="exp">
            </div>
            <div class="mb-3">
              <label for="cvv" class="form-label">CVV</label>
              <input type="text" class="form-control" name="cvv" id="cvv" aria-describedby="cvv">
            </div>
            <div class="mb-3">
              <label for="note" class="form-label">Ghi chú</label>
              <input type="text" class="form-control" name="note" id="note" aria-describedby="note">
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">Nạp ngay</button>
            </div>
          </form>
        </div>
